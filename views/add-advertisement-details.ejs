<body>
    <% include nav-bar.ejs%>

        <div class="container">
            <div class="row ">
                <div class="col-lg-6">
                    <h3>Thêm quảng cáo</h3>
                    <form action="/banners/add" enctype="multipart/form-data" method="post">
                        <div class="form-group">
                            <label class="label-product-form">Ảnh quảng cáo</label>
                            <input type="file" name="anh" required accept="image/*">
                        </div>
                        <div class="form-group ">
                            <label class="label-product-form">Link</label>
                            <input type="text" class="form-control" name="link" placeholder=" " required>
                        </div>
                        <div class="form-group ">
                            <button type="submit" value="submit" class="button">Thêm</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>


        <!-- jQuery Plugins -->
        <script src="js/jquery.min.js "></script>
        <script src="js/bootstrap.min.js "></script>
        <script src="js/slick.min.js "></script>
        <script src="js/nouislider.min.js "></script>
        <script src="js/jquery.zoom.min.js "></script>
        <script src="js/main.js "></script>
        <script type="text/javascript" src="http://example.com/jquery.min.js"></script>
        <script type="text/javascript" src="http://example.com/image-uploader.min.js"></script>
