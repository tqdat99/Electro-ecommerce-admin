<body>

    <% include nav-bar.ejs%>

        <section class="cart_area">
            <div class="container">
                <div class="cart_inner">
                    <a href="/advertisements/add" style="margin-bottom: 16px;">
                        <button class="button">Thêm quảng cáo</button>
                    </a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Ảnh</th>
                                    <th scope="col">Link</th>
                                    <th scope="col">Trạng thái</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% Advertisements.forEach(function(advertisement){ %>
                                    <tr>
                                        <td>
                                            <p>
                                                <%= advertisement.id%>
                                            </p>
                                        </td>
                                        <td>
                                            <img src="<%= advertisement.anh%>" class="ad-banner-preview">
                                        </td>
                                        <td>
                                            <a href="<%= advertisement.link%>" target="_blank">Link</a>
                                        </td>
                                        <td>
                                            <%= advertisement.status%>
                                        </td>
                                        <td>
                                            <a href="/advertisements/details?id=<%=advertisement.id%>">
                                                <p class="btn-link">Sửa</p>
                                            </a>
                                        </td>
                                    </tr>
                                    <%});%>
                            </tbody>
                        </table>
                    </div>


                    <% if (pages > 0) { %>
                        <ul class="store-pagination">
                            <% if (current == 1) { %>
                                <li class="disabled" id="pageFirst"><a>Đầu</a></li>
                                <% } else { %>
                                    <li><a id="pageFirst">Đầu</a></li>
                                    <% } %>
                                        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                                            <% if (i !== 1) { %>
                                                <li class="disabled"><a>...</a></li>
                                                <% } %>
                                                    <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>

                                                        <% if (i == current) { %>
                                                            <li class="active">
                                                                <a style="color:#ffffff">
                                                                    <%= i %>
                                                                </a>
                                                            </li>
                                                            <% } else { %>
                                                                <li>
                                                                    <a id="page<%=i%>">
                                                                        <%= i %>
                                                                    </a>
                                                                </li>
                                                                <% } %>

                                                                    <% if (i == Number(current) + 4 && i < pages) { %>
                                                                        <li class="disabled "><a>...</a></li>
                                                                        <% } %>
                                                                            <% } %>
                                                                                <% if (current == pages) { %>
                                                                                    <li class="disabled" id="pageLast"><a>Cuối</a></li>
                                                                                    <% } else { %>
                                                                                        <li><a id="pageLast">Cuối</a>
                                                                                        </li>
                                                                                        <% } %>
                        </ul>
                        <% } %>
                </div>
            </div>
        </section>
        <script>
            var currentHref = window.location.href;

            if (Number(<%=current%>) != 1) {
                page = document.getElementById("pageFirst");
                if (currentHref.includes("?page=")) {
                    n = currentHref.indexOf("?page=");
                    page.href = currentHref.substr(0, n) + "?page=" + 1;
                } else {
                    page.href = currentHref + "?page=" + 1;
                }
            }

            if (Number(<%=current%>) != Number(<%=pages%>)) {
                page = document.getElementById("pageLast");
                if (currentHref.includes("?page=")) {
                    n = currentHref.indexOf("?page=");
                    page.href = currentHref.substr(0, n) + "?page=" + <%=pages%>;
                } else {
                    page.href = currentHref + "?page=" + <%=pages%>;
                }
            }

            var i = (Number(<%=current%>) > 5 ? Number(<%=current%>) - 4 : 1);
            for (; i <= (Number(<%=current%>) + 4) && i <= Number(<%=pages%>); i++) {
                if (i == Number(<%=current%>)) {
                    continue
                } else {
                    id = "page" + i;
                    page = document.getElementById(id);
                    if (currentHref.includes("?page=")) {
                        n = currentHref.indexOf("?page=");
                        page.href = currentHref.substr(0, n) + "?page=" + i;
                    } else {
                        page.href = currentHref + "?page=" + i;
                    }
                }
            }
        </script>
        <script src="js/jquery.min.js"></script>
        <script src="js/bootstrap.min.js"></script>
        <script src="js/slick.min.js"></script>
        <script src="js/nouislider.min.js"></script>
        <script src="js/jquery.zoom.min.js"></script>
        <script src="js/main.js"></script>

</body>

</html>