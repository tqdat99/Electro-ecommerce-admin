<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>Electro - HTML Ecommerce Template</title>

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="css/bootstrap.min.css" />

    <!-- Slick -->
    <link type="text/css" rel="stylesheet" href="css/slick.css" />
    <link type="text/css" rel="stylesheet" href="css/slick-theme.css" />

    <!-- nouislider -->
    <link type="text/css" rel="stylesheet" href="css/nouislider.min.css" />

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="css/font-awesome.min.css">

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="css/style.css" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
		  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->

</head>

<body>
    <% include nav-bar.ejs%>

        <div class="container">
            <div class="row ">
                <div class="col-lg-6">
                    <h3>Chỉnh sửa sản phẩm</h3>
                    <form action="/products/edit" enctype="multipart/form-data" method="post">
                        <div class="form-group">
                            <label class="label-product-form">Mã sản phẩm</label>
                            <input type="text" class="form-control" name="id" placeholder="" value="<%=item.id%>" readonly="readonly">
                        </div>
                        <div class="form-group">
                            <label class="label-product-form">Tên sản phẩm</label >
                            <input type="text" class="form-control" name="ten" placeholder="" value="<%=item.ten%>">
                        </div>
                        <div class="form-group">
                            <label class="label-product-form">Ảnh đại diện</label >
                            <img src="<%=item.anh%>" class="product-thumbnail-form">
                            <!-- <input type="text" class="form-control" name="anh" placeholder="URL"> -->
                            <!-- <p>hoặc</p> -->
                            <!-- <input type="text" class="form-control" name="anh" placeholder="" value="<%=item.anh%>" readonly="readonly"> -->
                            <input type="file" name="thumbnail" accept="image/*" value="Thay đổi">
                        </div>
                        <div class="form-group">
                            <label class="label-product-form">Ảnh sản phẩm</label >
                            <% images.forEach(function(img){ %>
                                <div class="col" style="margin-bottom: 16px;">
                                <img src="<%=img.img%>" class="product-img-small" alt="">
                                <a href="/products/remove-product-image?imgId=<%=img.imgid%>&id=<%=item.id%>" class="button remove-img">Xóa</a>
                            </div>
                                <%})%>
                                    <input type="file" id="files" name="images" multiple accept="image/*" placeholder="Thêm ảnh" />
                        </div>
                        <div class="form-group ">
                            <label class="label-product-form">Giá</label >
                            <input type="number" class="form-control" name="gia" placeholder=" " value="<%=item.gia%>">
                        </div>
                        <div class="form-group ">
                            <label class="label-product-form">Mô tả</label>
                            <textarea class="form-control" name="mota" placeholder=" " rows="7">
                            <%=item.mota%>
                        </textarea>
                        </div>
                        <div class="form-group ">
                            <label class="label-product-form">Loại</label >
                            <input type="text" class="form-control " name="loai" placeholder=" " value="<%=item.loai%>" readonly="readonly">
                        </div>
                        <div class="form-group ">
                            <label class="label-product-form">Hãng</label>
                            <input type="text " class="form-control " name="brand" placeholder=" " value="<%=item.brand%>" readonly="readonly">
                            <!-- <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Chọn
                              </button>
                            <div class="dropdown-menu" aria-label class="label-product-form"ledby="dropdownMenu2">
                                <button class="dropdown-item" type="button">Apple</button>
                                <button class="dropdown-item" type="button">Nokia</button>
                                <button class="dropdown-item" type="button">Asus</button>
                            </div> -->
                        </div>
                        <div class="form-group ">
                            <label class="label-product-form">Kho</label>
                            <input type="number" class="form-control" name="kho" placeholder=" " value="<%=item.kho%>">
                        </div>
                        <div class="form-group ">
                            <button type="submit" value="submit" class="button">Lưu</button>
                        </div>


                    </form>
                    <form action="/products/remove?id=<%=item.id%>" method="post">
                        <div class="form-group ">
                            <button style="background-color: #F01D4F; border-color: #F01D4F;" type="submit" value="submit" class="button">Xóa</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>


        <!-- jQuery Plugins -->
        <script src="js/jquery.min.js "></script>
        <script src="js/bootstrap.min.js "></script>
        <script src="js/slick.min.js "></script>
        <script src="js/nouislider.min.js "></script>
        <script src="js/jquery.zoom.min.js "></script>
        <script src="js/main.js "></script>

</body>

</html>